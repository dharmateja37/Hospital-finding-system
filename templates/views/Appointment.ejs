<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
  integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<html>
<style>
  .container {
    margin-top: 5vh;
  }

  .w-100 {
    height: 40vh;
  }
</style>
<%- include('../partials/navbar.ejs')%>
  <div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="https://media.istockphoto.com/photos/the-concept-of-charity-love-donate-and-helping-hand-international-picture-id1220974375?k=20&m=1220974375&s=612x612&w=0&h=HiIvh-fdsZ1NY1d9p1VCba18mDNeg6Vue7Kfeepe9ec="
            class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h4>Welcome..!</h4>
            <p>To book an appointment, please fill in the information below and submit.</p>
          </div>
        </div>

      </div>

    </div>
  </div>
  <%list.forEach(speciality=>{%>
  <div class="container">
    <form action="/booked" method="POST" onsubmit = "return(validateFields(document.getElementById('age'),document.getElementById('inputEmail3'),document.getElementById('phone'),document.getElementById('problem')));">
    <div class="row my-3  mx-5">
      <div class="col ">

        <input type="text" class="form-control" id="validationDefault01" placeholder="Firstname" name="Firstname" required>
      </div>
      <div class="col ">
        <input type="text" class="form-control" id="validationDefault02" placeholder="Lastname" name="Lastname" required>
      </div>
    </div>
    <div class="row my-3 mx-5">
      <div class="col  ">

        <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="Email">
      </div>
      <div class="col ">
        <input type="text" class="form-control" placeholder="Phone" name="Phone" id="phone">

      </div>
    </div>
    <div class="row my-3 mx-5">
      <div class="col">
        <input type="text" class="form-control" id="problem" placeholder="Problem" name="Problem">
      </div>
      <div class="col ">
        <input class="form-control" id="datefield" type="date" name="date" placeholder="Select a Date*">
      </div>
    </div>
    <div class="row my-3 mx-5">
      <div class="col">
        <select class="form-control" name="timeslot">
          <option>Select Time slot</option>
          <option>10:00AM to 12:00PM</option>
          <option>12:00PM to 01:00PM</option>
          <option>02:00PM to 04:00PM</option>
          <option>04:30PM to 07:00PM</option>
        </select>
      </div>
      <div class="col">
        <input type="text" id="age" class="form-control" placeholder="Your Age" name="age">
      </div>
    </div>
     <div class="row my-3 mx-5">
      <div class="col">
        <input type="text" class="form-control" placeholder="value" value="<%= speciality.dname %>" name="value" readonly="readonly">
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="value2" value="<%= speciality.Hospital %>" name="value2" readonly="readonly">
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <strong> Total Fees: &nbsp; </strong><input type="text" class="form-control" placeholder="value1" value="<%= speciality.fee %>" name="value1" style="width: 100px; float: middle;" readonly="readonly"><strong>&nbsp; Rs</strong>
    </div>
    <div class="row my-3 mx-5">
      <div class="col">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
</form>
  </div>
  <%})%>
<script type='text/javascript'>
  var today = new Date();
var dd = today.getDate();
var mm = today.getMonth()+1; //January is 0 so need to add 1 to make it 1!
var yyyy = today.getFullYear();
if(dd<10){
  dd='0'+dd
} 
if(mm<10){
  mm='0'+mm
} 

today = yyyy+'-'+mm+'-'+dd;
document.getElementById("datefield").setAttribute("min", today);
function validateFields(elem1,elem2,elem3,elem4)
{
var age=/^[0-9]{1,3}$/;
var email=/^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$/;
var phone=/^\d{10}$/;
var problem=/^[a-zA-Z]+$/;
if(!elem1.value.match(age)||!elem2.value.match(email)||!elem3.value.match(phone)||!elem4.value.match(problem))
{
alert("Invalid input fields");
return false;
}
if(elem1.value.match(age)&&elem2.value.match(email)&&elem3.value.match(phone)&&elem4.value.match(problem))
{
alert("Successfully submitted");
return true;
}
}
</script>
</html>