<!DOCTYPE html>
<html lang=" en">
<%- include('../partials/navbar.ejs')%>

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  </head>
  <% var a=0 %>
    <style>
      .sec {
        width: 100%;
        height: 550px;
      }

.card{
    height: 360px;
}
      img {
        height: 30vh;
      }
    </style>


    <body>
      <div class="sec">
        <div class="bd-example" style="height:400px;">
          <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">

            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">

                <img
                  src="https://media.istockphoto.com/photos/red-heart-with-stethoscope-heart-health-insurance-for-your-health-picture-id1295420201?k=20&m=1295420201&s=612x612&w=0&h=pksodnL3ACYAUoSh_fBurq20DYx1As7KqE09hAx9Dzg="
                  class="d-block w-100" alt="..." style="height:400px;">
                <div class="carousel-caption d-none d-md-block">
                  <h3>Welcome to eCare</h3>
                  <p>Search by your preference</p>
                  <a href="/Hsearch"><button type="button" class="btn btn-danger btn-sm">Hospitals</button></a>
                  <a href="/Dsearch"><button type="button" class="btn btn-success btn-sm">Doctors</button></a>



                </div>
              </div>
            </div>
            <br />
          </body>
          <% b=lis.length%>
          <h3 class="text mx-4">Book an appointment for an in-clinic consultation</h3>
        
          <p class="text mx-4">Find experienced doctors across all specialties</p>

          
    <section>
      <div class="row mx-2">
        <%lis.forEach(category=>{%> 
          <div class="col ">
            <form action="/deleted" method="post">
              <button name="value" value="<%= category.cno %>" type="submit">
            <div class="card" style="width: 15rem;" > <a ><img src="<%= category.photo %>" class="card-img-top" alt="..." ></a>
            
              <div class="card-body" >
 <p class="card-text"><h6 style="color:blue;"><%=category.category%></h6></p></form>
                 <p class=" card-text"><%= category.info%></p>
                
              </div>
            </div></button></form> <br />
          </div>
          <% a++ %>
            <% if(a%4==0){%>
              <div class="w-100"></div>
              <%}%>
                <% c=b%4%>
                  <% if(c==2&&a==b){%>
                    <div class="col"></div>
                    <div class="col"></div>
                    <%}%>
                      <% if(c==3&&a==b){%>
                        <div class="col"></div>
                        <%}%>



                          <%})%>
      </div>
</section>  
      


      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

</html>