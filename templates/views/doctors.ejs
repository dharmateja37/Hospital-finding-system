    <%- include('../partials/navbar.ejs')%>
     <style>
        .card {

            max-height: 30vh;
            object-fit: cover;
            max-width:40vw;
           

        }

        .jumbotron {
            background-color: rgb(158, 148, 148);
        }

        img {
            height: 30vh;
        }
    </style> 
  <% var a=0 %>
 <% var b=0 %> 
<body>
    <%list.forEach(speciality=>{%>
        
        <% b++ %>
            
        <% if(b==list.length){%>
        <div class="jumbotron">
            <div class="container">
                <h2 class="display-3">
                    <%=speciality.hname %>
                </h2>
                <p>
                    <%=speciality.haddress %>
                </p>
                <p>
                    <%= speciality.phone %>
                </p>
               
                    
        
                    <p><a class="btn btn-primary btn-lg" href="<%=speciality.link%>" role="button">Official site?</a></p>
                        
                    
                   
            </div>
        </div>
        <%}%> 
    
        <%})%> 
    </body>
    <section>
        <div class="row">
            <%list.forEach(speciality=>{%>
              <div class="col">
                <div class="card primary mb-3 mx-4 my-3">
                  <div class="row no-gutters">
                    <div class="col-md-4">
                      <img src="<%=speciality.photo%>" class="card-img" alt="..." />
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title">Dr.<%= speciality.dname %>
                        </h5>
                        <p class="card-text">Consultant <%= speciality.Speciality %>
                           <br />
                           <!--  <%= speciality.Hospital %><br />  -->
                              <%= speciality.address %> <br/>
                              <%= speciality.fee %>/- Rs
                        </p>
                        <h7>
                          <p class="card-text"></p>
                        </h7>
                        <form action="/Appointment" method="post">
                        <button type="submit" class="btn btn-success  btn-sm mx-2" value="<%= speciality.dno %>"
                          name="value" >Book
                            appointment</button></a>
                          </form>
                        <br />
  
  
                      </div>
                    </div>
  
                  </div>
  
                </div>
  
              </div>
  
  
              <% a++ %>
  
                <% if(a%2==0){%>
                  <div class="w-100"></div>
  
  
                  <%}%>
                    <%})%>
          </div>
    </section>

        
       
